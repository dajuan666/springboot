<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context   
	http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/mvc   
	http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
	
	<!-- 启动Spring MVC的注解功能，完成请求和注解POJO的映射 -->
    <!-- 启动Spring MVC的注解功能，完成请求和注解POJO的映射 -->
    <mvc:annotation-driven></mvc:annotation-driven>  
    
	<!-- 开启自动扫包 -->
    <!-- 把标记了@Controller注解的类转换为bean -->
   <context:component-scan base-package="com.liu.web"></context:component-scan>
   
   <mvc:resources location="/js/,/" mapping="/**"/>
   <mvc:resources location="/img/,/" mapping="/**"/>
   <mvc:resources location="/css/,/" mapping="/**"/>
   <mvc:resources location="/resources/,/" mapping="/**"/>
    
   
	<!-- 加载视图 -jsp视图  freemarker volecity beetl 等
		request.getRealPath("/")工程路径：+prefix+viewname+suffix
		完整路径
	-->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
        <property name="prefix" value="/WEB-INF/pages/"></property> <!-- 我这里的视图直接放在WebRoot下的 -->
        <property name="suffix" value=".jsp"></property>
    </bean>
</beans>